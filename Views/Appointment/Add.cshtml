    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
<script>

    $(document).ready(function () {
        $('input[type=datetime]').datepicker({
            dateFormat: "dd-mm-yy",
            changeMonth: true,
            changeYear: true,
            yearRange: "-60:+0",
             onSelect: function (dateString, txtDate) {
                alert("Selected Date: " + dateString + "\nTextBox ID: " + txtDate.id);
            }
        });

    });
</script>






