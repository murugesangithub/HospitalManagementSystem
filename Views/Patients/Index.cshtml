@*Patient View*@
<div class="panel">

    <div class="panel panel-info">
        <div class="panel-heading">Patient Details</div>
        <div class="panel-body">
            <table id="jqPatientGrid"></table>
            <div id="jqPatientGridPager"></div>

        </div>
    </div>
</div>
<script src="~/Scripts/Patient/Patient.js"></script>


<section class="content">
    <div class="modal fade" id="PatientDetailModalPopup">
        <div class="modal-dialog box box-info" style="width:80%;">
            <div class="modal-content ">
                <div class="box-header with-border">
                    <h3 class="box-title" id="ProfileTitle"></h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-dismiss="modal" aria-label="Close"><i class="fa fa-times"></i></button>
                    </div>
                </div>
                <div class="modal-body">
                    <div class="container">
                        <div class="row">
                            @*<div class="col-md-3 border-right">
                                <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                                    <img class="rounded-circle mt-5 image" id="ProfileImage" style="max-width:220px">
                                </div>
                            </div>*@
                            <div class="col-md-4 border-right">
                                <div class="p-3 py-5 form-group">
                                    <div class="col-md-6 form-group"><label class="labels">First Name</label><input type="text" id="FirstName" class="form-control" readonly></div>
                                    <div class="col-md-6 form-group"><label class="labels">Last Name</label><input type="text" id="LastName" class="form-control" readonly></div>
                                    <div class="col-md-12 form-group"><label class="labels">Email ID</label><input type="text" id="Email" class="form-control" readonly></div>
                                    <div class="col-md-12 form-group"><label class="labels">Phone Number</label><input type="text" id="PhoneNumber" class="form-control" readonly></div>
                                    <div class="col-md-12 form-group"><label class="labels">Date of Birth</label><input type="text" id="DateofBirth" class="form-control" readonly></div>
                                </div>
                            </div>
                            <div class="col-md-4 border-right">
                                <div class="p-3 py-5  form-group">

                                   
                                    <div class="row md-4 form-group">

                                        <div class="col-md-12 form-group"><label class="labels">Guardian Name</label><input type="text" id="GuardianName" class="form-control" readonly></div>
                                        <div class="col-md-12 form-group"><label class="labels">Problem</label><input type="text" id="Problem" class="form-control" readonly></div>
                                        <div class="col-md-12 form-group"><label class="labels">Age</label><input type="text" id="Age" class="form-control" readonly></div>
                                    </div>
                                    <div class="row md-4 form-group">

                                        <div class="col-md-12 form-group"><label class="labels">Gender</label><input type="text" id="Gender" class="form-control" readonly></div>
                                        
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="p-3 py-5">
                                    
                                    <div class="col-md-12 form-group"><label class="labels">Marital Status</label><input type="text" id="MaritalStatus" class="form-control" readonly></div>
                                    <div class="col-md-12 form-group"><label class="labels">Address</label><input type="text" id="Address" class="form-control" readonly></div>
                                    <div class="col-md-6 form-group"><label class="labels">Country</label><input type="text" id="Country" class="form-control" readonly></div>
                                    <div class="col-md-6 form-group"><label class="labels">State/Region</label><input type="text" id="State" class="form-control" readonly></div>
                                    <div class="col-md-6 form-group"><label class="labels">City</label><input type="text" id="City" class="form-control" readonly></div>
                                    <div class="col-md-6 form-group"><label class="labels">Postal Code</label><input type="text" id="PostalCode" class="form-control" readonly></div>

                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>



</section>

