@model HospitalManagementSystem.ViewModel.PatientViewModel
@using HospitalManagementSystem.Common;

@{
    ViewBag.Title = "UpdatePatientDetail";
}

<section class="content-header">
    <h1>
        Patient Management
        <small>Update Patient Detail</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Registration</a></li>
        <li class="active">General Elements</li>
    </ol>
</section>
<section class="content">
    <div class="row">

        <div class="col-md-12">

            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Patient Registration</h3>
                </div>

                @using (Html.BeginForm("AddPatient", "Patients", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.PatientDetailId, new { @class = "form-control" })
                    @Html.ValidationSummary("", new { @class = "text-danger" })



                    <div class="box-body">

                        <div class="row">
                            <div class="col-md-6">

                                <div class="form-group">
                                    @Html.LabelFor(m => m.FirstName, new { @class = "col-sm-3 control-label " })

                                    <div class="col-sm-9">
                                        @Html.TextBoxFor(m => m.FirstName, new { placeholder = "FirstName", @class = "form-control " })


                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(m => m.Gender, htmlAttributes: new { @class = "col-sm-3 control-label" })
                                    <div class="col-md-9">
                                        @Html.DropDownListFor(m => m.Gender, Model.GenderList, "Select", new { @class = "form-control" })

                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(m => m.Email, new { @class = "col-sm-3 control-label" })
                                    <div class="col-md-9">
                                        @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })

                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(m => m.Age, new { @class = "col-sm-3 control-label" })
                                    <div class="col-sm-9">
                                        @Html.TextBoxFor(m => m.Age, new { placeholder = "Age", @class = "form-control" })

                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(m => m.MaritalStatus, htmlAttributes: new { @class = "col-sm-3 control-label" })
                                    <div class="col-md-9">
                                        @Html.DropDownListFor(m => m.MaritalStatus, Model.MaritalStatusList, "Select", new { @class = "form-control" })

                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(m => m.PhoneNumber, new { @class = "col-sm-3 control-label" })
                                    <div class="col-md-9">
                                        @Html.TextBoxFor(m => m.PhoneNumber, new { placeholder = "PhoneNumber", @class = "form-control" })
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6"
                            <div class="form-group">
                            @Html.LabelFor(m => m.LastName, new { @class = "col-sm-3 control-label" })
                            <div class="col-sm-9">
                            @Html.TextBoxFor(m => m.LastName, new { placeholder = "LastName", @class = "form-control" })
                            </div>
                            </div>

                            <div class="form-group">
                            @Html.LabelFor(m => m.GuardianName, new { @class = "col-sm-3 control-label" })
                            <div class="col-sm-9">
                            @Html.TextBoxFor(m => m.GuardianName, new { placeholder = "GuardianName", @class = "form-control" })
                            </div>
                            </div>

                            <div class="form-group">
                            @Html.LabelFor(model => model.DateofBirth, htmlAttributes: new { @class = "col-sm-3 control-label" })
                            <div class="col-md-9">
                            @Html.EditorFor(model => model.DateofBirth, new { placeholder = "Date of Birth", htmlAttributes = new { @class = "form-control" } })
                            </div>
                            </div>

                            <div class="form-group">
                            @Html.LabelFor(m => m.Problem, new { @class = "col-sm-3 control-label" })
                            <div class="col-sm-9">
                            @Html.TextBoxFor(m => m.Problem, new { placeholder = "Injury/Condition", @class = "form-control" })

                            </div>
                            </div>

                            <div class="form-group">
                            @Html.LabelFor(m => m.Address, new { @class = "col-sm-3 control-label" })
                            <div class="col-sm-9">
                            @Html.TextBoxFor(m => m.Address, new { placeholder = "StreetAddress", @class = "form-control" })<br />


                            <div class="row">
                            <div class="col-sm-6">
                            @Html.TextBoxFor(m => m.City, new { placeholder = "city", @class = "form-control" })<br />

                            @Html.TextBoxFor(m => m.PostalCode, new { placeholder = "ZIP/Postal Code", @class = "form-control" })<br />

                            </div>
                            <div class="col-sm-6">
                            @Html.TextBoxFor(m => m.State, new { placeholder = "State/Province", @class = "form-control" })<br />

                            @Html.DropDownListFor(m => m.Country, Model.CountryList, "Select your Country", new { @class = "form-control" })

                            </div>
                            </div>
                            </div>
                            </div>

                            </div>
                        </div>
                    </div>



                    <div class="box-footer">
                        <div class="row">
                            <div class="col-md-1"></div>
                            <div class="col-md-5">  <button class="btn btn-gradgreen" type="submit"><i class="fa fa-plus-square"></i> SAVE </button></div>
                            <div class="col-md-3">  <button class="btn btn-gradgray pull-right" type="reset"><i class="fa fa-refresh"></i> Reset</button></div>
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

