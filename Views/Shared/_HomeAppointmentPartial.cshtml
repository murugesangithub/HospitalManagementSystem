
@model HospitalManagementSystem.ViewModel.AppointmentViewModel
@using HospitalManagementSystem.Common;



<section class="ftco-appointment ftco-section ftco-no-pt ftco-no-pb">
    <div class="overlay"></div>
    <div class="container">
        <div class="row d-md-flex justify-content-center">
            <div class="col-md-12">
                <div class="wrap-appointment d-md-flex">
                    <div class="col-md-8 bg-primary p-5 heading-section heading-section-white" id="Appointment">
                        <span class="subheading">Booking an Appointment</span>
                        <h2 class="mb-4">Free Consultation</h2>
                        @*<form action="#" class="appointment">*@
                        @using (Html.BeginForm("AddAppointment", "Home", FormMethod.Post, new { @class = "appointment", role = "form", enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()

                            @*@Html.ValidationSummary(true, "", new { @class = "text-danger" })*@
                            @Html.HiddenFor(m => m.DoctorId, new { @class = "form-control" })
                            <div class="row justify-content-center">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @*<input type="text" class="form-control" placeholder="Your Name">*@
                                        @Html.TextBoxFor(m => m.FirstName, new { placeholder = "First Name", @maxlength = "20", @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @*<input type="text" class="form-control" placeholder="Phone number">*@
                                        @Html.TextBoxFor(m => m.PhoneNumber, new { placeholder = "Phone Number", @maxlength = "10", @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="form-field">
                                            <div class="select-wrap">
                                                <div class="icon"><span class="fa fa-chevron-down"></span></div>

                                                @Html.DropDownListFor(m => m.Department, Model.DepartmentList, "Select", new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.Department, "", new { @class = "text-danger" })
                                                @*<select name="" id="" class="form-control">
                                                        <option value="">Select Services</option>
                                                        <option value="">Cardiology</option>
                                                        <option value="">Gastroenterology</option>
                                                        <option value="">Orthopedic & Traumatology</option>
                                                        <option value="">Neuro - Neuro Surgery</option>
                                                        <option value="">Nephrology & Urology</option>
                                                        <option value="">General Medicine</option>
                                                    </select>*@
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="form-field">
                                            <div class="select-wrap">
                                                <div class="icon"><span class="fa fa-chevron-down"></span></div>
                                                @*<select name="" id="" class="form-control">
                                                        <option value="">Select Doctors</option>
                                                        <option value="">John Doe</option>
                                                        <option value="">William Smith</option>
                                                        <option value="">Danny Green</option>
                                                        <option value="">Jason Thompson</option>
                                                    </select>*@
                                                @Html.DropDownListFor(m => m.DoctorListDesc, Model.DoctorList, "Select", new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.DoctorListDesc, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="input-wrap">
                                            <div class="icon"><span class="fa fa-calendar"></span></div>
                                            @*<input type="text" class="form-control appointment_date" placeholder="Date">*@
                                            @Html.EditorFor(model => model.DateofAppointment, new { placeholder = "Appointment Date", @maxlength = "15", htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.DateofAppointment, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="input-wrap">
                                            <div class="icon"><span class="fa fa-clock-o"></span></div>
                                            @*<input type="text" class="form-control appointment_time" placeholder="Time">*@
                                            @Html.DropDownListFor(m => m.TimeSlot, Model.TimeSlotListMorning, "Select", new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.TimeSlot, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input type="submit" value="Send Message" class="btn btn-secondary py-3 px-4">
                                    </div>
                                </div>
                            </div>
                        }
                        @*</form>*@
                    </div>
                    <div class="col-md-4 bg-white text-center p-5">
                        <div class="desc border-bottom pb-4">
                            <h2>Business Hours</h2>
                            <div class="opening-hours">
                                <h4>Opening Days:</h4>
                                <p class="pl-3">
                                    <span><strong>Monday – Sunday:</strong> 9am to 20 pm</span>
                                    @*<span><strong>Saturday :</strong> 9am to 17 pm</span>*@
                                </p>
                                <h4>Vacations:</h4>
                                <p class="pl-3">
                                    <span>All Sunday Days</span>
                                    <span>All Official Holidays</span>
                                </p>
                            </div>
                        </div>
                        <div class="desc pt-4 ">
                            <h3 class="heading">For Emergency Cases</h3>
                            <span class="phone">(+01) 04322-272560</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="~/Scripts/Home/HomeAddAppointment.js"></script>