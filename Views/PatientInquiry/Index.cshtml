
@{
    ViewBag.Title = "Index";
}
<style>

    .border-right {
        border-right: 1px solid #dee2e6 !important;
    }

    .form-control[disabled], .form-control[readonly], fieldset[disabled] {
        background-color: #fff;
    }
</style>
<div class="panel">
    <div class="panel panel-info">
        <div class="panel-heading">Patient Inquiry Details</div>
        <div class="panel-body">
            <table id="jqPatientInquiryGrid"></table>
            <div id="jqPatientInquiryGridPager"></div>

        </div>
    </div>
</div>
<script src="~/Scripts/PatientInquiry/PatientInquiry.js"></script>

<section class="content">
    <div class="modal fade" id="PatientInquiryDetailModalPopup">
        <div class="modal-dialog box box-info" style="width:80%;">
            <div class="modal-content ">
                <div class="box-header with-border">
                    <h3 class="box-title" id="ProfileTitle"></h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-dismiss="modal" aria-label="Close"><i class="fa fa-times"></i></button>
                    </div>
                </div>
                <div class="modal-body">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-3 border-right">
                                <div class="d-flex flex-column align-items-center text-center p-3 py-5">


                                    @*<img class="rounded-circle mt-5 image" id="ProfileImage" style="max-width:220px" src="">*@
                                </div>
                            </div>
                            <div class="col-md-3 border-right">
                                <div class="p-3 py-5 form-group">
                                    <div class="col-md-6 form-group"><label class="labels">First Name</label><input type="text" id="FirstName" class="form-control" readonly></div>
                                    <div class="col-md-6 form-group"><label class="labels">Last Name</label><input type="text" id="LastName" class="form-control" readonly></div>
                                    <div class="col-md-12 form-group"><label class="labels">Gender</label><input type="text" id="Gender" class="form-control" readonly></div>
                                    <div class="col-md-12 form-group"><label class="labels">DateofBirth</label><input type="text" id="DateOfBirth" class="form-control" readonly></div>
                                    <div class="col-md-12 form-group"><label class="labels">Age</label><input type="text" id="Age" class="form-control" readonly></div>
                                    <div class="col-md-12 form-group"><label class="labels">Email</label><input type="text" id="Email" class="form-control" readonly></div>
                                    <div class="col-md-12 form-group"><label class="labels">Phone Number</label><input type="text" id="PhoneNumber" class="form-control" readonly></div>
                                    <div class="col-md-12 form-group"><label class="labels">Height</label><input type="text" id="Height" class="form-control" readonly></div>
                                    <div class="col-md-12 form-group"><label class="labels">Weight</label><input type="text" id="Weight" class="form-control" readonly></div>
                                    <div class="col-md-12 form-group"><label class="labels">Guardian Name</label><input type="text" id="GuardianName" class="form-control" readonly></div>
                                </div>
                            </div>

                            <div class="col-md-3 border-right">
                                <div class="p-3 py-5">
                                    <div class="row md-3 form-group">
                                        <div class="col-md-12 form-group"><label class="labels">Problem</label><input type="text" id="Problem" class="form-control" readonly></div>
                                        <div class="col-md-12 form-group"><label class="labels">Address</label><input type="text" id="Address" class="form-control" readonly></div>
                                        <div class="col-md-6 form-group"><label class="labels">City</label><input type="text" id="City" class="form-control" readonly></div>
                                        <div class="col-md-6 form-group"><label class="labels">PostalCode</label><input type="text" id="PostalCode" class="form-control" readonly></div>
                                        <div class="col-md-6 form-group"><label class="labels">State</label><input type="text" id="State" class="form-control" readonly></div>
                                        <div class="col-md-6 form-group"><label class="labels">Country</label><input type="text" id="Country" class="form-control" readonly></div>
                                        <div class="col-md-12 form-group"><label class="labels">Diabetes</label><input type="text" id="Diabetes" class="form-control" readonly></div> <br />
                                        <div class="col-md-12 form-group"><label class="labels">Thyroid Problem</label><input type="text" id="ThyroidProblems" class="form-control" readonly></div>
                                        <div class="col-md-12 form-group"><label class="labels">Lung Problem</label><input type="text" id="LungProblems" class="form-control" readonly></div> <br>
                                        <div class="col-md-12 form-group"><label class="labels">Heart Problem</label><input type="text" id="HeartProblems" class="form-control" readonly></div> <br>
                                        <div class="col-md-12 form-group"><label class="labels">Blood Pressure Problem</label><input type="text" id="BloodPressureProblems" class="form-control" readonly></div> <br>
                                    </div>
                                    
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="p-3 py-5">

                                    <div class="col-md-12 form-group"><label class="labels">Kidney or Liver Problem</label><input type="text" id="KidneyProblems" class="form-control" readonly></div> <br>
                                    <div class="col-md-12 form-group"><label class="labels">Cancer Problem</label><input type="text" id="Cancer" class="form-control" readonly></div> <br>
                                    <div class="col-md-12 form-group"><label class="labels">Do You Smoke</label><input type="text" id="Doyousmoke" class="form-control" readonly></div> <br>
                                    <div class="col-md-12 form-group"><label class="labels">Do you Drink Alchocol</label><input type="text" id="Doyoudrinkalchocol" class="form-control" readonly></div> <br>
                                    <div class="col-md-12 form-group"><label class="labels">Do you have any allergies to food, drugs, etc?</label><input type="text" id="Allergy" class="form-control" readonly></div> <br>
                                    <div class="col-md-12 form-group"><label class="labels">Do you have any medical conditions not mentioned above</label><input type="text" id="MedicalConditions" class="form-control" readonly></div><br>
                                    <div class="col-md-12 form-group"><label class="labels">If yes, when was your last dose?</label><input type="text" id="LastDose" class="form-control" readonly></div> <br>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
