
@{
    ViewBag.Title = "UpdatePatientInquiryDetail";
}

@model HospitalManagementSystem.ViewModel.PatientInquiryViewModel
@using HospitalManagementSystem.Common;

@{
    ViewBag.Title = "UpdatePatientInquiry";
}

<section class="content-header">
    <h1>
        Patient Inquiry Management
        <small>Registration</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Home/Index"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="/PatientAdmission/Add">PatientInquiry</a></li>
        @*<li class="active">General Elements</li>*@
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Patient Inquiry Registration</h3>
                </div>

                @using (Html.BeginForm("AddPatientInquiry", "PatientInquiry", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.HiddenFor(m => m.PatientInquiryId, new { @class = "form-control" })

                    <div class="box-body">
                        <div class="form-group">
                            @Html.LabelFor(m => m.FirstName, new { @class = "col-sm-3 control-label " })
                            <div class="col-md-6">
                                @Html.TextBoxFor(m => m.FirstName, new { placeholder = "First Name", @maxlength = "20", @class = "form-control " })

                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.LastName, new { @class = "col-sm-3 control-label" })
                            <div class="col-md-6">
                                @Html.TextBoxFor(m => m.LastName, new { placeholder = "Last Name", @maxlength = "20", @class = "form-control" })

                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Gender, htmlAttributes: new { @class = "col-sm-3 control-label" })
                            <div class="col-md-6">
                                @Html.DropDownListFor(m => m.Gender, Model.GenderList, "Select Your Gender", new { @class = "form-control" })

                            </div>
                        </div>


                        <div class="form-group">
                            @Html.LabelFor(m => m.Age, new { @class = "col-sm-3 control-label" })
                            <div class="col-sm-6">
                                @Html.TextBoxFor(m => m.Age, new { placeholder = "Age", @maxlength = "10", @class = "form-control" })

                            </div>
                        </div>


                        <div class="form-group">
                            @Html.LabelFor(m => m.Email, new { @class = "col-sm-3 control-label" })
                            <div class="col-md-6">
                                @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @maxlength = "30", @class = "form-control" })

                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.PhoneNumber, new { @class = "col-sm-3 control-label" })
                            <div class="col-md-6">
                                @Html.TextBoxFor(m => m.PhoneNumber, new { placeholder = "Phone Number", @maxlength = "10", @class = "form-control" })

                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Height, new { @class = "col-sm-3 control-label" })
                            <div class="col-md-6">
                                @Html.TextBoxFor(m => m.Height, new { placeholder = "Height", @maxlength = "3", @class = "form-control" })

                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Weight, new { @class = "col-sm-3 control-label" })
                            <div class="col-md-6">
                                @Html.TextBoxFor(m => m.Weight, new { placeholder = "Weight", @maxlength = "3", @class = "form-control" })

                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.GuardianName, new { @class = "col-sm-3 control-label" })
                            <div class="col-md-6">
                                @Html.TextBoxFor(m => m.GuardianName, new { placeholder = "Guardian Name", @maxlength = "20", @class = "form-control" })

                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.DateofBirth, htmlAttributes: new { @class = "col-sm-3 control-label" })
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.DateofBirth, new { placeholder = "Date of Birth", @maxlength = "15", htmlAttributes = new { @class = "form-control" } })

                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Problem, new { @class = "col-sm-3 control-label" })
                            <div class="col-md-6">
                                @Html.TextBoxFor(m => m.Problem, new { placeholder = "Injury/Condition", @maxlength = "20", @class = "form-control" })

                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Address, new { @class = "col-sm-3 control-label" })
                            <div class="col-md-6">
                                @Html.TextBoxFor(m => m.Address, new { placeholder = "Street Address", @maxlength = "100", @class = "form-control" })
                                <br />
                                <div class="row">
                                    <div class="col-md-6">
                                        @Html.TextBoxFor(m => m.City, new { placeholder = "city", @class = "form-control" })
                                        <br />
                                        @Html.TextBoxFor(m => m.PostalCode, new { placeholder = "ZIP/Postal Code", @maxlength = "10", @class = "form-control" })<br />

                                    </div>
                                    <div class="col-md-6">
                                        @Html.TextBoxFor(m => m.State, new { placeholder = "State/Province", @maxlength = "20", @class = "form-control" })
                                        <br />
                                        @Html.DropDownListFor(m => m.Country, Model.CountryList, "Select your Country", new { @class = "form-control" })

                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="box-header with-border">
                            <h3 class="box-title">Medical Conditions</h3>
                        </div><br />

                        <div class="form-group">
                            @Html.LabelFor(m => m.Diabetes, new { @class = "col-sm-3 control-label " })

                            <div class="col-md-6 ">
                                Yes
                                @Html.RadioButtonFor(model => model.Diabetes, "Yes")
                                No
                                @Html.RadioButtonFor(model => model.Diabetes, "No")

                            </div>

                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.ThyroidProblems, new { @class = "col-sm-3 control-label " })

                            <div class="col-md-6">
                                Yes
                                @Html.RadioButtonFor(model => model.ThyroidProblems, "Yes")
                                No
                                @Html.RadioButtonFor(model => model.ThyroidProblems, "No")
                            </div>
                        </div>



                        <div class="form-group">
                            @Html.LabelFor(m => m.LungProblems, new { @class = "col-sm-3 control-label " })
                            <div class="col-md-6">
                                Yes
                                @Html.RadioButtonFor(model => model.LungProblems, "Yes")
                                No
                                @Html.RadioButtonFor(model => model.LungProblems, "No")



                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.HeartProblems, new { @class = "col-sm-3 control-label " })
                            <div class="col-md-6">
                                Yes
                                @Html.RadioButtonFor(model => model.HeartProblems, "Yes")
                                No
                                @Html.RadioButtonFor(model => model.HeartProblems, "No")



                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.BloodPressureProblems, new { @class = "col-sm-3 control-label " })
                            <div class="col-md-6">
                                Yes
                                @Html.RadioButtonFor(model => model.BloodPressureProblems, "Yes")
                                No
                                @Html.RadioButtonFor(model => model.BloodPressureProblems, "No")



                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.KidneyorLiverProblems, new { @class = "col-sm-3 control-label " })
                            <div class="col-md-6">
                                Yes
                                @Html.RadioButtonFor(model => model.KidneyorLiverProblems, "Yes")
                                No
                                @Html.RadioButtonFor(model => model.KidneyorLiverProblems, "No")



                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Cancer, new { @class = "col-sm-3 control-label " })
                            <div class="col-md-6">
                                Yes
                                @Html.RadioButtonFor(model => model.Cancer, "Yes")
                                No
                                @Html.RadioButtonFor(model => model.Cancer, "No")



                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Doyousmoke, new { @class = "col-sm-3 control-label " })
                            <div class="col-md-6">
                                Yes
                                @Html.RadioButtonFor(model => model.Doyousmoke, "Yes")
                                No
                                @Html.RadioButtonFor(model => model.Doyousmoke, "No")



                            </div>
                        </div>


                        <div class="form-group ">
                            @Html.LabelFor(m => m.Doyoudrinkalchocol, new { @class = "col-sm-3 control-label " })
                            <div class="col-md-6 ">
                                Yes
                                @Html.RadioButtonFor(model => model.Doyoudrinkalchocol, "Yes")
                                No
                                @Html.RadioButtonFor(model => model.Doyoudrinkalchocol, "No")



                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.MedicalConditions, htmlAttributes: new { @class = "col-sm-3 control-label" })
                            <div class="col-md-6">
                                @Html.TextAreaFor(m => m.MedicalConditions, new { placeholder = "Medical Conditions", @class = "form-control" })

                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Allergy, htmlAttributes: new { @class = "col-sm-3 control-label" })
                            <div class="col-md-6">
                                @Html.TextAreaFor(m => m.Allergy, new { placeholder = "Allergy", @class = "form-control" })

                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Lastdose, htmlAttributes: new { @class = "col-sm-3 control-label" })
                            <div class="col-md-6">
                                @Html.TextAreaFor(m => m.Lastdose, new { placeholder = "Last Dose", @class = "form-control" })

                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.AttachFile, new { @class = "col-sm-3 control-label" })
                            <div class="col-sm-6">
                                @Html.TextBoxFor(m => m.AttachFile, new { @class = "form-control", @type = "file", @name = "Files", @accept = "image/*" })
                            </div>
                        </div>

                    </div>

                    <div class="box-footer">
                        <div class="row">
                            <div class="col-md-3"></div>
                            <div class="col-md-4">  <button class="btn btn-gradgreen" type="submit"><i class="fa fa-plus-square"></i> SAVE </button></div>
                            <div class="col-md-2">  <button class="btn btn-gradgray pull-right" type="reset"><i class="fa fa-refresh"></i> Reset</button></div>
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



