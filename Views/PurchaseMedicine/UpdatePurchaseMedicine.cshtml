@model HospitalManagementSystem.ViewModel.PurchaseMedicineViewModel
@using HospitalManagementSystem.Common;
@{
    ViewBag.Title = "UpdatePurchaseMedicine";
}

<section class="content-header">
    <h1>
        Purchase Management
        <small>Registration</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Home/Index"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Registration</a></li>
        @*<li class="active">General Elements</li>*@
    </ol>
</section>
<section class="content">
    <div class="row">

        <div class="col-md-12">

            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Medicine Registration</h3>
                </div>

                @using (Html.BeginForm("PurchaseMedicine", "PurchaseMedicine", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.HiddenFor(m => m.MedicineId, new { @class = "form-control" })
                    <div class="box-body">

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.SupplierName, new { @class = "col-sm-3 control-label" })
                                    <div class="col-md-9">
                                        @Html.TextBoxFor(m => m.SupplierName, new { placeholder = "Supplier Name", @maxlength = "20", @class = "form-control" })
                                     
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(m => m.Code, new { @class = "col-sm-3 control-label" })
                                    <div class="col-md-9">
                                        @Html.TextBoxFor(m => m.Code, new { placeholder = "Enter Purchase No", @maxlength = "20", @class = "form-control" })
                                       
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "col-sm-3 control-label" })
                                    <div class="col-md-9">
                                        @Html.EditorFor(model => model.Date, new { placeholder = "Select Purchase Date", @maxlength = "15", htmlAttributes = new { @class = "form-control" } })
                                      
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Medicine, htmlAttributes: new { @class = "col-sm-3 control-label" })
                                    <div class="col-md-9">
                                        @Html.DropDownListFor(m => m.Medicine, Model.MedicineList, "Select Medicine", new { @class = "form-control" })
                                      
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(m => m.Category, htmlAttributes: new { @class = "col-sm-3 control-label" })
                                    <div class="col-md-9">
                                        @Html.DropDownListFor(m => m.Category, Model.CategoryList, "Select Catogory", new { @class = "form-control" })
                                    
                                    </div>
                                </div>



                                <div class="form-group">
                                    @Html.LabelFor(m => m.Quantity, new { @class = "col-sm-3 control-label" })
                                    <div class="col-md-9">
                                        @Html.TextBoxFor(m => m.Quantity, new { placeholder = "Enter Quantity", @maxlength = "10", @class = "form-control" })
                                      
                                    </div>
                                </div>

                            </div>

                            <div class="col-md-6">


                                <div class="form-group">
                                    @Html.LabelFor(m => m.Discount, new { @class = "col-sm-3 control-label" })
                                    <div class="col-md-9">
                                        @Html.TextBoxFor(m => m.Discount, new { placeholder = "Discount", @maxlength = "3", @class = "form-control" })
                                       
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(m => m.GrandTotal, new { @class = "col-sm-3 control-label" })
                                    <div class="col-md-9">
                                        @Html.TextBoxFor(m => m.GrandTotal, new { placeholder = "GrandTotal", @maxlength = "10", @class = "form-control" })
                                       
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(m => m.Payment, htmlAttributes: new { @class = "col-sm-3 control-label" })
                                    <div class="col-md-9">
                                        @Html.DropDownListFor(m => m.Payment, Model.PaymentList, "Select Payment Type", new { @class = "form-control" })
                                      
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(m => m.PaymentStatus, htmlAttributes: new { @class = "col-sm-3 control-label" })
                                    <div class="col-md-9">
                                        @Html.DropDownListFor(m => m.PaymentStatus, Model.PaymentStatusList, "Select Payment Status", new { @class = "form-control" })
                                      
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Notes, htmlAttributes: new { @class = "col-sm-3 control-label" })
                                    <div class="col-md-9">
                                        @Html.TextAreaFor(m => m.Notes, new { placeholder = "Enter Notes", @maxlength = "50", @class = "form-control" })
                                       
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="box-footer">
                        <div class="row">
                            <div class="col-md-1"></div>
                            <div class="col-md-5">  <button class="btn btn-gradgreen pull-left" type="submit"><i class="fa fa-plus-square"></i> SAVE </button></div>
                            <div class="col-md-3">  <button class="btn btn-gradgray pull-right" type="reset"><i class="fa fa-refresh"></i> Reset</button></div>
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>


</section>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script>

    $(document).ready(function () {
        $('input[type=datetime]').datepicker({
            dateFormat: "dd-mm-yy",
            changeMonth: true,
            changeYear: true,
            yearRange: "-60:+0",
             onSelect: function (dateString, txtDate) {
                alert("Selected Date: " + dateString + "\nTextBox ID: " + txtDate.id);
            }
        });

    });
</script>

